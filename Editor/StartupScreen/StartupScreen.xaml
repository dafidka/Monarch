<Window x:Class="Editor.GameProject.StartupScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.GameProject"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Startup Screen" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <ToggleButton Content="Load Project" x:Name="loadProjBtn" FontSize="32"
                          Click="toggleBtn_Click"/>
            <ToggleButton Content="Create Project" x:Name="createProjBtn" FontSize="32" Margin="30,0,0,0"
                          Click="toggleBtn_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" x:Name="screenContent">
            <Border Width="800" Background="LightSalmon">
                <TextBlock FontSize="72" Text="Load Project"/>
            </Border>
            <Border Width="800" Background="LightSeaGreen">
                <TextBlock FontSize="72" Text="Create Project"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
